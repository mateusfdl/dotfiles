{
  "$schema": "https://charm.land/crush.json",
  "options": {
    "context_paths": ["docs/", "CRUSH.md"]
  },
  "permissions": {
    "allowed_tools": [
      "view",
      "ls",
      "grep",
      "edit",
      "multiedit",
      "write",
      "glob",
      "web_search",
      "fetch",
      "download",
      "diagnostics",
      "references",
      "todo",
      "mcp_context7_get-library-doc"
    ]
  },
  "lsp": {
    "golang": {
      "command": "gopls"
    },
    "typescript": {
      "command": "typescript-language-server",
      "args": ["--stdio"]
    },
    "biome": {
      "command": "npx",
      "args": [
        "biome",
        "lsp-proxy"
      ]
    }
  },
  "mcp": {
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena-mcp-server",
        "--context",
        "ide-assistant"
      ]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "autoApprove": [],
      "disabled": false,
      "timeout": 9999
    },
    "tree-sitter": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-tree-sitter"
      ]
    }
  }
}
