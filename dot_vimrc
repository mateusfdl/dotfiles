let $VIM = $HOME.'/.vim'

"leader
let mapleader = ","

set encoding=utf-8

" CONFIG 
set number "Show rows number at sidebar
set relativenumber "Show line number on the current line and relative numbers on all other lines
set autoindent	
set tabstop=4
set smartcase 
set noerrorbells "Disable error sounds
set noswapfile 
set ignorecase
set incsearch
set ruler
set laststatus=2

so $VIM/plug.vim

set colorcolumn=81
highlight ColorColumn ctermbg=red
