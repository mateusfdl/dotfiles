# Status update interval
set -g default-terminal "screen-256color"
set -g status-interval 1

# Basic status bar colors
set -g status-style fg=colour11,bg="#282c34"

# Left side of status bar
set -g status-left-style fg=colour11,bg=colour3
set -g status-left-length 40
set -g status-left ""

# Right side of status bar
set -g status-right-style fg=colour11,bg=colour3
set -g status-right-length 150
set -g status-right ""

# Window status
set -g window-status-format "#[fg=colour10] #I:#W#[fg=colour14]#F "
set -g window-status-current-format "#[fg=colour2,bg='#282c34'] [#[fg=colour3,bg=colour8]#I:#W#[fg=colour4]#F#[fg=colour2,bg=colour8]]"

# Current window status
set -g window-status-current-style bg=colour5,fg=colour13

# Window with activity status
set -g window-status-activity-style bg="#282c34",fg=colour13

# Window separator
set -g window-status-separator ""

# Window status alignment
set -g status-justify centre

# Pane border
set -g pane-border-style bg="#282c34",fg=colour10

# Active pane border
set -g pane-active-border-style bg="#282c34",fg=colour10

# Pane number indicator
set -g display-panes-colour colour10
set -g display-panes-active-colour colour2

# Clock mode
set -g clock-mode-colour colour10
set -g clock-mode-style 24

# Message
set -g message-style bg=colour10,fg="#282c34"

# Command message
set -g message-command-style bg=colour7,fg="#282c34"

# Mode
set -g mode-style bg=colour5,fg=colour2
